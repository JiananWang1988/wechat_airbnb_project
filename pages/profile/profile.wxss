/* pages/profile/profile.wxss */
.h2-header {
  color: black;
  text-align: center;
  font-size: 50rpx; 
  font-weight: bold;
  padding: 10px;
  margin: 15px;
}

.h3-comment {
  text-align: center;
  color: #ceccc8;
  font-size: 40rpx;
  margin-bottom: 33px;
}

.profile-img {
  width: 130px;
  height: 90px;
  margin: 10px;
  border-radius: 3px;
}

.flexbox{
  display: flex;
  border-radius: 4px;
  margin: 20px 20px;
  width: 90%;
  background-color: #eaeaea;
}

.profile-text {
  display: flex;
  margin-top: 12px;
}

.show-name {
  font-weight: bold;
  font-size: 22px;
  margin-top: 7px;
  color: #525252;
}

.show-price {
  position: absolute;
  right: 35px;
  font-size: 23px;
  font-style: italic;
  margin-top: 8px;
  color: #525252;
}

.rentout-description {
  position: absolute;
  font-size: 15px;
  left: 171px;
  margin-top: 50px;
  color: #525252;
}