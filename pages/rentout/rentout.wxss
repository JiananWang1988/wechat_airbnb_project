/* pages/rentout/rentout.wxss */
.profile-tittle {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
}

.profile-img {
  width: 110px;
  height: 90px;
  margin: 5px;
}

.flexbox{
  display: flex;
  border: solid #C4C4C4 1px;
  margin: 10px 15px;
  width: 80%;
}

.profile-text {
  display: flex;
  margin-top: 10px;
}

.show-name {
  font-weight: bold;
}

.show-price {
  position: absolute;
  right: 48px;
}

.btn-minus {
  width: 24px;
  height: 24px;
  position: absolute;
  right: 10px;
  padding-top: 30px;
}

.btn-plus {
  width: 56px;
  height: 56px;
  position: absolute;
  right: 10px;
}